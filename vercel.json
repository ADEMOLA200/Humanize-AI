{
  "version": 2,
  "builds": [
    {
      "src": "main.go",
      "use": "@vercel/go"
    }
  ],
  "routes": [
    {
      "src": "/rewrite",
      "methods": ["POST", "OPTIONS"],
      "dest": "/main.go"
    },
    {
      "src": "/",
      "dest": "/main.go"
    }
  ],
  "headers": [
    {
      "source": "/rewrite",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, X-API-Key" }
      ]
    }
  ]
}